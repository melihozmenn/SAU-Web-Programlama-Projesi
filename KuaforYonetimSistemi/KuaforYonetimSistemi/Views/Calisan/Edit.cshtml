@model KuaforYonetimSistemi.Models.Calisan

@{
    ViewData["Title"] = "Çalýþan Güncelle";
}

<h1>Edit</h1>

<h4>Calisan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Adi" class="control-label"></label>
                <input asp-for="Adi" class="form-control" />
                <span asp-validation-for="Adi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UzmanlikAlanlari" class="control-label"></label>
                <input asp-for="UzmanlikAlanlari" class="form-control" />
                <span asp-validation-for="UzmanlikAlanlari" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UygunlukSaatleri" class="control-label"></label>
                <input asp-for="UygunlukSaatleri" class="form-control" />
                <span asp-validation-for="UygunlukSaatleri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalonId" class="control-label"></label>
                <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId"></select>
                <span asp-validation-for="SalonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Çalýþan Listesine Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
