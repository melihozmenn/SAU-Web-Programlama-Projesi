@model IEnumerable<KuaforYonetimSistemi.Models.Randevu>

@{
    ViewData["Title"] = "Randevu Yönetimi";
}

<h1>Randevu Yönetimi</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Randevu Ekle</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Müþteri Adý</th>
            <th>Müþteri Telefonu</th>
            <th>Tarih</th>
            <th>Çalýþan</th>
            <th>Ýþlem</th>
            <th>Durum</th>
            <th>Ýþlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.Id</td>
                <td>@randevu.MusteriAdi</td>
                <td>@randevu.MusteriTelefonu</td>
                <td>@randevu.Tarih.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@randevu.Calisan?.Adi</td>
                <td>@randevu.Islem?.Adi</td>
                <td>
                    @if (randevu.Onayli)
                    {
                        <span class="badge bg-success">Onaylandý</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Bekliyor</span>
                    }
                </td>
                <td>
                    <div class="btn-group">
                        @if (!randevu.Onayli)
                        {
                            <a asp-action="Onay" asp-route-id="@randevu.Id" class="btn btn-sm btn-success">Onayla</a>
                        }
                        <a asp-action="Details" asp-route-id="@randevu.Id" class="btn btn-sm btn-primary">Detaylar</a>
                        <a asp-action="Edit" asp-route-id="@randevu.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@randevu.Id" class="btn btn-sm btn-danger">Sil</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
