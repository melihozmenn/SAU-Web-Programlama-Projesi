            <th>
                @Html.DisplayNameFor(model => model.MusteriTelefonu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tarih)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Islem.Salon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calisan.Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MusteriAdi)
            </td>
